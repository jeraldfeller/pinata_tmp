{% extends '@AppCore/Admin/Farm/layout.html.twig' %}

{% block title 'Edit Farm' %}

{% block breadcrumb_crumbs %}
    {{ parent() }}
    <li><a href="{{ path('app_core.admin.farm.update', {'id': farm.id}) }}">{{ farm.name }}</a> <span class="divider">/</span></li>
    <li class="active">Edit Farm</li>
{% endblock breadcrumb_crumbs %}

{% block content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {% include '@AppCore/Admin/Farm/_form.html.twig' with {'form': form, 'farm': farm} %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Save Farm</button>
        <a href="{{ path('app_core.admin.farm.index') }}" class="btn"><i class="icon-refresh"></i> Cancel</a>
    </div>
    {{ form_end(form) }}
{% endblock content %}
