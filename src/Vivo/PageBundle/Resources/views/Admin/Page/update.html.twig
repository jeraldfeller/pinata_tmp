{% extends '@VivoPage/Admin/layout.html.twig' %}

{% block title 'Edit Page' %}

{% block breadcrumb_crumbs %}
    {{ parent() }}
    <li><a href="{{ path('vivo_page.admin.page.update', {'id': page.id}) }}">{{ page.pageTitle }}</a> <span class="divider">/</span></li>
    <li class="active">Edit Page</li>
{% endblock breadcrumb_crumbs %}

{% block content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {% include '@VivoPage/Admin/Page/_form.html.twig' with {'form': form, 'page': page} %}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Save Page</button>
            <a href="{{ path('vivo_page.admin.tree.index') }}" class="btn"><i class="icon-refresh"></i> Cancel</a>
        </div>
    {{ form_end(form) }}
{% endblock content %}
