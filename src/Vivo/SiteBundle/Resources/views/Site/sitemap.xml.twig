{% spaceless %}
    <?xml version="1.0" encoding="UTF-8"?>
    <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
        {% for url in urls %}
            <url>
                {% if url.location %}<loc>{{ url.location }}</loc>{% endif %}
                {% if url.lastModified %}<lastmod>{{ url.lastModified|date('Y-m-d') }}</lastmod>{% endif %}
                {% if url.changeFrequency %}<changefreq>{{ url.changeFrequency }}</changefreq>{% endif %}
                {% if url.priority %}<priority>{{ url.priority|number_format(1, '.', '') }}</priority>{% endif %}
            </url>
        {% endfor %}
    </urlset>
{% endspaceless %}
