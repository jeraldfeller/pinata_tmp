{% extends '@VivoSite/Admin/layout.html.twig' %}

{% block title 'Create Site' %}

{% block breadcrumb_crumbs %}
    {{ parent() }}
    <li class="active">Create Site</li>
{% endblock breadcrumb_crumbs %}

{% block content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {% include '@VivoSite/Admin/Site/_form.html.twig' with {'form': form, 'site': site} %}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Create Site</button>
            <a href="{{ path('vivo_site.admin.site.index') }}" class="btn"><i class="icon-refresh"></i> Cancel</a>
        </div>
    {{ form_end(form) }}
{% endblock content %}
